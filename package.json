{
  "name": "memo-relay",
  "version": "1.0.0",
  "description": "Secure one-time self-destructing memo sharing tool",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "wrangler deploy",
    "dev:worker": "wrangler dev",
    "dev:all": "sh -c 'npm run dev:worker & worker_pid=$!; npm run dev; kill $worker_pid'"
  },
  "dependencies": {
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wrangler": "^4.0.0"
  }
}
